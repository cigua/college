<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ImageView
    android:id="@+id/seat1"
    android:paddingTop="40dip"
    android:layout_width="100dip"
    android:layout_height="100dip"
    android:layout_marginLeft="25dip"
    android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat1_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/seat1"
        android:layout_alignLeft="@id/seat1"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat2"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toRightOf="@id/seat1"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat2_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@id/seat2"
        android:layout_alignLeft="@id/seat2"
        android:layout_marginLeft="45dip"/>
    <ImageView
    android:id="@+id/seat3"
    android:paddingTop="40dip"
    android:layout_width="100dip"
    android:layout_height="100dip"
    android:layout_toRightOf="@id/seat2"
    android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat3_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@id/seat2"
        android:layout_alignLeft="@id/seat3"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat4"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignLeft="@id/seat1"
        android:layout_below="@id/seat1"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat4_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@id/seat4"
        android:layout_alignLeft="@id/seat4"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat5"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toRightOf="@id/seat4"
        android:layout_below="@id/seat2"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat5_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@id/seat5"
        android:layout_alignLeft="@id/seat5"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat6"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toRightOf="@id/seat5"
        android:layout_below="@id/seat3"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat6_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_below="@id/seat6"
        android:layout_alignLeft="@id/seat6"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat7"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignLeft="@id/seat4"
        android:layout_below="@id/seat4"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat7_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@id/seat7"
        android:layout_alignLeft="@id/seat7"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat8"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toRightOf="@id/seat7"
        android:layout_below="@id/seat5"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat8_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@id/seat8"
        android:layout_alignLeft="@id/seat8"
        android:layout_marginLeft="45dip"/>
    <ImageView
        android:id="@+id/seat9"
        android:paddingTop="40dip"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_toRightOf="@id/seat8"
        android:layout_below="@id/seat6"
        android:src="@drawable/seat"/>
    <TextView
        android:id="@+id/seat9_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@id/seat9"
        android:layout_alignLeft="@id/seat9"
        android:layout_marginLeft="45dip"/>
</RelativeLayout>