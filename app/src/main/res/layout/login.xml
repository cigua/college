<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="25dip"/>
            <EditText
                android:id="@+id/student_name"
                android:layout_width="200dip"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stu_num"
            android:layout_below="@id/stu_name"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号:"
                android:textSize="25dip"/>
            <EditText
                android:id="@+id/student_number"
                android:layout_width="200dip"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stu_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/stu_num"
            android:layout_marginTop="30dip">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textSize="25dip"/>
            <EditText
                android:id="@+id/student_password"
                android:layout_width="200dip"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/stu_pass"
            android:layout_marginTop="30dip">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:textSize="25dip"/>
            <EditText
                android:id="@+id/checkword"
                android:layout_width="180dip"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/check"
            android:layout_marginTop="30dip">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <ImageView
                android:id="@+id/img_checkword"
                android:layout_below="@id/check"
                android:layout_width="150dip"
                android:layout_height="50dip" />
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/img"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"/>
            <Button
                android:id="@+id/button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:text="登录"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>